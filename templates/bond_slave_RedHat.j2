DEVICE={{ item.1 }}
BOOTPROTO=none
MASTER={{ item.0.device }}
ONBOOT=yes
SLAVE=yes
USERCTL=no

{% if item.ethtool_opts is defined %}
ETHTOOL_OPTS={{ item.ethtool_opts }}
{% endif %}

{% if item.1 is match(vlan_interface_regex) %}
VLAN=yes
{% endif %}

{% if ansible_distribution_major_version | int >= 7 %}
NM_CONTROLLED=no
{% endif %}
