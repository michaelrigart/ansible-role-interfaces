# {{ ansible_managed }}

{% if item.ip6 is defined %}
{% for i in item.ip6.route | default([]) %}
{% set route = i.network %}
{% if 'gateway' in i %}
{% set route = route ~ ' via ' ~ i.gateway %}
{% else %}
{% set route = route ~ ' dev ' ~ item.device %}
{% endif %}
{% if 'table' in i %}
{% set route = route ~ ' table ' ~ i.table %}
{% endif %}
{% if 'options' in i %}
{% set route = route ~ ' ' ~ i.options | join(' ') %}
{% endif %}
{{ route }}
{% endfor %}
{% endif %}
