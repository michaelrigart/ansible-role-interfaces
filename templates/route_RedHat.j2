# {{ansible_managed}}
{% for i in item.route %}
{% set route = (i.network ~ '/' ~ i.netmask) | ipaddr('net') %}
{% if 'gateway' in i %}
{% set route = route ~ ' via ' ~ i.gateway %}
{% else %}
{% set route = route ~ ' dev ' ~ item.device %}
{% endif %}
{% if 'table' in i %}
{% set route = route ~ ' table ' ~ i.table %}
{% endif %}
{{ route }}
{% endfor %}
